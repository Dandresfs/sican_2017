extends ../../../inicio
block scroll_header_panel_title
    span(class="title") ENTREGABLES CONTRATO
block help_content
    p(class="title-help") Descripción:
    p.
        En esta tabla encuentras el listado de los entregables del contrato.
block head_content_inicio
    link(rel="import",href="{% static 'bower_components/paper-button/paper-button.html'%}")
block custom_style_panel
    style(is="custom-style")
        | paper-button{
        |   margin-bottom:15px;
        | }
block breadcrum
    a(href="/proyectos/",class="link_button")
        paper-icon-item(class="breadcrumb-paper-icon-item-class") Inicio
            iron-icon(icon="check",item-icon)
    a(href="../../",class="link_button")
        paper-icon-item(class="breadcrumb-paper-icon-item-class") Lista de contratos
            iron-icon(icon="check",item-icon)
    paper-icon-item(class="breadcrum_active",disabled) Contrato: {{contrato_nombre}}
        iron-icon(icon="check",item-icon)
block scroll_header_panel_content
    div(class="container-fluid container-index")
        table(id="table",class="display responsive no-wrap table table-striped table-bordered",width="100%")
            thead
                tr
                    th Nombre
                    th Diplomado
                    th Nivel
                    th Sesión
                    th Tipo
                    th Valor
            tbody
                tr
                    td Nombre
                    td Diplomado
                    td Nivel
                    td Sesión
                    td Tipo
                    td Valor

block body_script_content
    script.
        $(document).ready(function () {
            var table = $('#table').DataTable({
                "stateSave": true,
                "searching": true,
                "processing": true,
                "serverSide": true,
                "scrollX": true,
                "ajax": "/rest/financiera/entregablesvalor/{{id_contrato}}/",
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.8/i18n/Spanish.json"
                },
                "order": [[0, "asc"]],
                "columns": [
                    {
                        "data": 1,
                        "className": 'text-center',
                        "orderable": false,
                    },
                    {
                        "data": 2,
                        "className": 'text-center',
                        "orderable": false,
                    },
                    {
                        "data": 3,
                        "className": 'text-center',
                        "orderable": false,
                    },
                    {
                        "data": 4,
                        "className": 'text-center',
                        "orderable": false,
                    },
                    {
                        "data": 5,
                        "className": 'text-center',
                        "orderable": false,
                    },
                    {
                        "data": 6,
                        "className": 'text-center',
                        "orderable": false,
                        "render": function (data, type, row, meta) {
                            return accounting.formatMoney(data);
                        },
                    }
                ]
            });
        });
