block body_script_content
   script.
      $(document).ready(function () {
             var table = $('#table').DataTable({
                "stateSave": true,
                "searching": true,
                "processing": true,
                "serverSide": true,
                "scrollX": true,
                "ajax": "/rest/reds/subsanacionevidencias/red/{{id_red}}/",
                "language": {
                   "url": "//cdn.datatables.net/plug-ins/1.10.8/i18n/Spanish.json"
                },
                "order": [[1, "asc"]],
                "columns": [
                   {
                      "className": 'details-control',
                      "orderable": false,
                      "data": null,
                      "defaultContent": ''
                   },
                   {
                      "data": 0,
                      "orderable": true,
                      "render": function (data, type, row, meta) {
                          return '<a href="evidencia/' + row[0] + '" style="color:#004c99;">SIC-'+ row[0] +'</a>';
                      },
                   },
                   {
                      "data": 5,
                      "orderable": false,
                   },
                   {
                      "data": 6,
                      "orderable": false,
                   },
                   {
                      "data": 7,
                      "orderable": false,
                   },
                   {
                      "data": 8,
                      "orderable": false,
                      "className": 'text-center',
                   },

                   {
                      "data": 2,
                      "orderable": false,
                      "className": 'text-center',
                   },
                   {
                      "data": 3,
                      "orderable": false,
                      "className": 'text-center',
                   },
                   {
                      "data": 1,
                      "orderable": false,
                      "className": 'text-center',
                   },
                   {
                      "data": 17,
                      "orderable": false,
                      "className": 'text-center',
                      "render": function (data, type, row, meta) {
                            return '<p style="color:#004c99;font-weight: bold;margin-top: 10px;">' + data + '</p>';
                      },
                   },
                   {
                      "orderable": false,
                      "className": 'text-center',
                      "data": null,
                      "render": function (data, type, row, meta) {
                         if (row[4] != '') {
                            return '<a target="_blank" href="' + row[4] + '" style="color:#004c99;"><img src="/static/img/file.png" height="32"></a>';
                         }
                         else {
                            return '';
                         }
                      },
                   },
                ]
             });
             // Add event listener for opening and closing details
             $('#table tbody').on('click', 'td.details-control', function () {
                var tr = $(this).closest('tr');
                var row = table.row(tr);
                if (row.child.isShown()) {
                   // This row is already open - close it
                   row.child.hide();
                   tr.removeClass('shown');
                }
                else {
                   // Open this row
                   row.child(format(row.data())).show();
                   tr.addClass('shown');
                }
             });
          });
          function format(d) {
             var cargados = '';
             var aprobados = '';
             var rechazados = '';
             for (i = 0; i < d[14].length; i++) {
                cargados += '<tr>' +
                        '<td colspan=2><p>' + d[14][i][0] + '</p></td>' +
                        '<td><p>' + d[14][i][1] + '</p></td>' +
                        '<td><p>' + d[14][i][2] + '</p></td>' +
                        '</tr>'
             }
             for (i = 0; i < d[15].length; i++) {
                aprobados += '<tr>' +
                        '<td colspan=2><p>' + d[15][i][0] + '</p></td>' +
                        '<td><p>' + d[15][i][1] + '</p></td>' +
                        '<td><p>' + d[15][i][2] + '</p></td>' +
                        '</tr>'
             }
             for (i = 0; i < d[16].length; i++) {
                rechazados += '<tr>' +
                        '<td><p>' + d[16][i][0] + '</p></td>' +
                        '<td><p>' + d[16][i][1] + '</p></td>' +
                        '<td><p>' + d[16][i][2] + '</p></td>' +
                        '<td><p>' + d[16][i][3] + '</p></td>' +
                        '</tr>'
             }
             if (cargados == '') {
                cargados += '<tr>' +
                        '<td colspan=8><p>No hay registros</p></td>' +
                        '</tr>'
             }
             if (aprobados == '') {
                aprobados += '<tr>' +
                        '<td colspan=8><p>No hay registros</p></td>' +
                        '</tr>'
             }
             if (rechazados == '') {
                rechazados += '<tr>' +
                        '<td colspan=8><p>No hay registros</p></td>' +
                        '</tr>'
             }
             return '<table class="table table-striped">' +
                     '<tr>' +
                     '<td><p class="bold-p">Fecha creación:</p>' + d[9] + '</td>' +
                     '<td><p class="bold-p">Fecha modificación:</p>' + d[10] + '</td>' +
                     '<td><p class="bold-p">Usuario:</p>' + d[11] + '</td>' +
                     '<td><p class="bold-p"></p></td>' +
                     '</tr>' +
                     '<tr>' +
                     '<td><p class="bold-p">Formador:</p>' + d[13] + '</td>' +
                     '<td><p class="bold-p">Entregable:</p>' + d[12] + '</td>' +
                     '<td><p class="bold-p"></p></td>' +
                     '<td><p class="bold-p"></p></td>' +
                     '</tr>' +
                     '<tr style="background:#1488ca;color:white;">' +
                     '<td colspan = 8 class="text-center"><p class="bold-p">BENEFICIARIOS CARGADOS</p></td>' +
                     '</tr>' +
                     '<tr>' +
                     '<td colspan=2><p class="bold-p">Nombre:</p></td>' +
                     '<td><p class="bold-p">Cedula:</p></td>' +
                     '<td><p class="bold-p">Grupo:</p></td>' +
                     '</tr>' +
                     cargados +
                     '<tr style="background:#76b82a;color:white;">' +
                     '<td colspan = 8 class="text-center"><p class="bold-p">BENEFICIARIOS APROBADOS</p></td>' +
                     '</tr>' +
                     '<tr>' +
                     '<td colspan=2><p class="bold-p">Nombre:</p></td>' +
                     '<td><p class="bold-p">Cedula:</p></td>' +
                     '<td><p class="bold-p">Grupo:</p></td>' +
                     '</tr>' +
                     aprobados +
                     '<tr style="background:#DF4113;color:white;">' +
                     '<td colspan = 8 class="text-center"><p class="bold-p">BENEFICIARIOS RECHAZADOS</p></td>' +
                     '</tr>' +
                     '<tr>' +
                     '<td><p class="bold-p">Nombre:</p></td>' +
                     '<td><p class="bold-p">Cedula:</p></td>' +
                     '<td><p class="bold-p">Grupo:</p></td>' +
                     '<td><p class="bold-p">Causa:</p></td>' +
                     '</tr>' +
                     rechazados +
                     '</table>';
          }