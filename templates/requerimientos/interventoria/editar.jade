extends ../../inicio
block scroll_header_panel_title
    span(class="title") REQUERIMIENTOS
block help_content
    p(class="title-help") Descripci√≥n:
    p.
        Aca puedes editar el requerimiento {{object.nombre}}.
block head_content_inicio
    link(rel="import",href="{% static 'bower_components/paper-button/paper-button.html'%}")
    link(rel="import",href="{% static 'bower_components/file-upload-sican/file-upload-sican.html'%}")
block custom_style_panel
    style(is="custom-style")
        | paper-button{
        |   margin-bottom:15px;
        | }
block breadcrum
    a(href="/proyectos/",class="link_button")
        paper-icon-item(class="breadcrumb-paper-icon-item-class") Inicio
            iron-icon(icon="check",item-icon)
    a(href="/requerimientos/delegacion/",class="link_button")
        paper-icon-item(class="breadcrumb-paper-icon-item-class") Listado de requerimientos
            iron-icon(icon="check",item-icon)
    paper-icon-item(class="breadcrum_active",disabled) Editar: {{object.nombre}}
        iron-icon(icon="check",item-icon)
block scroll_header_panel_content
    div(class="container-fluid container-index")
        div(class="row")
            div(class="col-sm-10 col-sm-offset-1")
                form(action="",method="POST",enctype="multipart/form-data",id="form-formador")
                    | {% csrf_token %}
                    | {% crispy form %}
                    div(class="text-right login-form-button")
                        paper-button(class="submit",id="submit_form") Guardar
block body_script_content
    script.
        $('#id_region').selectpicker({});
        $('#id_recepcion_solicitud').datetimepicker({
            locale: 'es',
            viewMode: 'years',
            format: 'DD/MM/YYYY'
        });
        $('#id_fecha_respuesta').datetimepicker({
            locale: 'es',
            viewMode: 'years',
            format: 'DD/MM/YYYY'
        });
        $("#id_archivo_solicitud").fileinput({
            language: "es",
            showRemove: false,
            showUpload: false,
            showPreview: false
        });
        $("#id_archivo_respuesta").fileinput({
            language: "es",
            showRemove: false,
            showUpload: false,
            showPreview: false
        });
        $("#id_encargados").chosen({
            no_results_text: "No hay resultados para",
            placeholder_text_multiple: "Seleccione los encargados"
        });
        $('#submit_form').on('click', function () {
            $('#form-formador').submit();
        });