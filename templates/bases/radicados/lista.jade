        | {% if nuevo_permiso %}
        div(class="block-right")
            a(href="nuevo",class="link_button")
                paper-button(class="submit") Nuevo
        | {% endif %}

        | {% if informes %}
        div(style="margin-bottom:20px;")
            select(class="selectpicker",id="select_accion")
                option(value="") ---------
                option(value="10") Base de datos radicados
